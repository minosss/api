{
  "name": "@yme/api",
  "description": "define type-safe API requests simply",
  "version": "2.0.0-alpha.11",
  "type": "module",
  "sideEffects": false,
  "author": "mino",
  "repository": "minosss/api",
  "keywords": [
    "api",
    "client",
    "rest",
    "http",
    "https",
    "nextjs"
  ],
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./client/middleware": {
      "types": "./dist/client/middleware.d.ts",
      "default": "./dist/client/middleware.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "default": "./dist/middleware.js"
    },
    "./next/action": {
      "types": "./dist/next/action.d.ts",
      "default": "./dist/next/action.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf node_modules dist",
    "build": "rm -rf dist && tsc -p tsconfig.build.json && publint --strict",
    "prepublishOnly": "npm run build",
    "release": "np",
    "test": "bun test --coverage",
    "lint": "biome lint",
    "format": "biome format --write ."
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/bun": "^1.1.8",
    "@types/node": "^22.5.4",
    "next": "^14.2.15",
    "node-mocks-http": "^1.16.1",
    "np": "^10.0.7",
    "publint": "^0.2.10",
    "size-limit": "^11.1.6",
    "typescript": "^5.5.4",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "next": "^14.0.0 || >=15.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=18.0.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "500 B"
    },
    {
      "path": "dist/client/index.js",
      "limit": "1 kB"
    },
    {
      "path": "dist/next/action.js",
      "limit": "1.2 kB"
    }
  ]
}
