{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "moduleDetection": "force",
    "declaration": true,
    "isolatedModules": true,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,

    "outDir": "dist"
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
